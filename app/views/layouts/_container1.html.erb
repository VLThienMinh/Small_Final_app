<div class="container container1">
  <div class="row">
    <div class="card col-3">
      <ul class="list-group list-group-flush">
        <% if current_user.is_admin == true %>
          <li class="list-group-item"><%= link_to "New Category", new_category_path %></li>
          <li class="list-group-item"><%= link_to "New Product", new_product_path %></li>
        <% end %>
        <% categories.each do |category| %>
          <li class="list-group-item"><%= link_to category.name, category%></li>
        <% end %>
      </ul>
    </div>
    <div id="carouselExampleControls" class="carousel slide col-9 border" data-ride="carousel">
      <div class="carousel-inner">
        <div class="carousel-item active">
          <img class="d-block w-100" src="/assets/1.jpeg" alt="First slide">
        </div>
        <div class="carousel-item">
          <img class="d-block w-100" src="/assets/1.jpeg" alt="Second slide">
        </div>
        <div class="carousel-item">
          <img class="d-block w-100" src="/assets/1.jpeg" alt="Third slide">
        </div>
        <div class="carousel-item">
          <img class="d-block w-100" src="/assets/1.jpeg" alt="Fourth slide">
        </div>
      </div>
      <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
      </a>
      <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
      </a>
    </div>
  </div>
</div>
